<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".ScentifyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_perfume"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Scentify">

        <activity
            android:name="com.scentify.app.ui.product.ProductDetailActivity"
            android:exported="false" />

        <activity
            android:name="com.scentify.app.ui.MainActivity"
            android:exported="false" />

        <activity
            android:name="com.scentify.app.ui.onboarding.OnboardingActivity"
            android:exported="false" />

        <activity
            android:name="com.scentify.app.ui.quiz.QuizActivity"
            android:exported="false" />

        <activity
            android:name="com.scentify.app.ui.auth.SignUpActivity"
            android:exported="false" />

        <activity
            android:name="com.scentify.app.ui.auth.SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
