<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="64dp"
    android:paddingBottom="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_header_title"
            android:textAppearance="@style/TextAppearance.Scentify.AppTitle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/settings_header_body"
            android:textAppearance="@style/TextAppearance.Scentify.Body" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/app_surface"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/app_divider"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_account_section"
                    android:textAppearance="@style/TextAppearance.Scentify.Section" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_email_label"
                    android:textAppearance="@style/TextAppearance.Scentify.Caption" />

                <TextView
                    android:id="@+id/textAccountEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textAppearance="@style/TextAppearance.Scentify.Section" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/app_divider" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonLogout"
                    style="@style/Widget.Scentify.Button.Tonal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_logout" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/app_surface"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/app_divider"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_saved_section"
                    android:textAppearance="@style/TextAppearance.Scentify.Section" />

                <TextView
                    android:id="@+id/textPreferencesSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/settings_no_preferences"
                    android:textAppearance="@style/TextAppearance.Scentify.Body" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/app_divider" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEditPreferences"
                    style="@style/Widget.Scentify.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_edit_preferences" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonClearPreferences"
                    style="@style/Widget.Scentify.Button.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/settings_clear_preferences" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonClearSaved"
                    style="@style/Widget.Scentify.Button.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/settings_clear_saved" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
