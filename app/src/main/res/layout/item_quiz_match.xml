<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/app_card"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageProduct"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/product_image_placeholder"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_perfume" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Scentify.Body" />

                <TextView
                    android:id="@+id/textProductBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Scentify.Caption"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <TextView
                android:id="@+id/textMatchPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Scentify.Section" />
        </LinearLayout>

        <TextView
            android:id="@+id/textMatchExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/quiz_result_match_explain"
            android:textAppearance="@style/TextAppearance.Scentify.Caption"
            android:textColor="@color/text_secondary" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipMatchTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:singleLine="false" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
