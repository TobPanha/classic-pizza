<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Scentify.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/app_accent</item>
        <item name="backgroundTint">@color/app_accent</item>
        <item name="android:textColor">@color/button_primary_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="Widget.Scentify.Button.Secondary" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/app_accent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/app_accent</item>
    </style>

    <style name="Widget.Scentify.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/app_surface</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">14dp</item>
    </style>

    <style name="Widget.Scentify.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="rippleColor">@color/ripple_accent</item>
    </style>
</resources>
